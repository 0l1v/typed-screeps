{
  "name": "typed-screeps",
  "version": "2.2.1",
  "description": "Strong TypeScript declarations for the game Screeps.",
  "repository": "screepers/typed-screeps",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/index.d.ts"
  ],
  "scripts": {
    "compile": "node ./build/concat.js",
    "compile-test": "tsc dist/screeps-tests.ts",
